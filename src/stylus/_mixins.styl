$fullscreen
	height calc(100vh - 40px)
	min-height 460px
	max-width calc(100vw - 40px)
	margin 20px
	padding 100px 0
	z-index 1
	position relative
	text-align center
	display flex
	background lighten(red,15)
	color white
	overflow hidden
	flex-direction column
	align-items center
	justify-content center
	transform translate3d(0,0,0)